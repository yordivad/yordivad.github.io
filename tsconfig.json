{
  "include": ["assets/ts/**/*"],
  "exclude": ["node_modules", "typings", "@types"],

  "compilerOptions": {
    "strict": true,
    "module": "es6",
    "target": "es6",
    "moduleResolution": "node",
    "pretty": true,
    "allowSyntheticDefaultImports": true,
    "noLib": false,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "lib": [
      "es2015",
      "es6",
      "dom"
    ],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@lambda/*": ["assets/*"]
    }
  }


}